bindsym $mod+ctrl+i             exec --no-startup-id maim -s | xclip -selection clipboard -t image/png 


#	Startup Exec's	#
# Misc. Commands to run at start of i3wm (boot) alternative to writing it to ~/.xinitrc

# xinput startups, to make sure to enable natural scrolling and right click etc.
exec xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Natural Scrolling Enabled" 1 
exec xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Click Method Enabled" 0 1

# Enable gesture controls on startup - not needed anymore due to "libinput-gestures-setup autostart" and proper libinput configuration..
exec --no-startup-id libinput-gestures-setup start

# Enable compton on startup
exec --no-startup-id compton --xrender-sync-fence

#Unclutter makes the mouse invisible after a brief period
# exec --no-startup-id unclutter

# Start polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start dropbox on startup
exec --no-startup-id dropbox
# Start nm-applet on startup (network manager GTK systray applet. Works with EDUROAM certificate with no problems!)
# exec --no-startup-id nm-applet

# Remap Caps-lock key to Escape, for using VIM
exec_always $term -e setxkbmap -option caps:escape
# Make US and DK keyboard layout togglable with Shift+Alt
exec_always $term -e setxkbmap -layout us,dk -option grp:alt_shift_toggle

# betterlockscreen setup to cache random image from Landscapes folder and make it the lock screen.
exec --no-startup-id sudo betterlockscreen -u ~/Documents/wallpapers/Landscapes -r 1920x1080

# Start redshift with Copenhagen coords at startup. F.lux alternative
exec --no-startup-id redshift -l 55.676098:12.568337 -t 6500:3400

# Start dunst for notifications
exec --no-startup-id dunst

